@{
    ViewData["Title"] = "Página inicial";
}
@model VeiculoModel
<div class="text-center">
    <h1 class="display-4">Deseja realmente deletar o veículo (@Model.Nome)?</h1>
    <a role="button" class="btn btn-primary" asp-controller="Veiculo" asp-route-id="@Model.Id" asp-action="ApagarVeiculo">Deletar</a>
    <a role="button" class="btn btn-danger" asp-controller="Veiculo" asp-action="Index">Voltar</a>
</div>
