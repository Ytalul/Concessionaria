@{
    ViewData["Title"] = "Adicionar veículo";
}
@model VeiculoModel

<div class="text-center">
    <h1 class="display-4">Adicionar novo veículo</h1>
</div>
<form asp-controller="Veiculo" asp-action="Adicionar" method="post">
    
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Nome do veículo">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Ano">Ano</label>
        <input asp-for="Ano" type="number" class="form-control" placeholder="Ano">
        @Html.ValidationMessageFor(x => x.Ano)
    </div>
    <div class="form-group">
        <label for="Descrição">Descrição</label>
        <input asp-for="Descrição" type="text" class="form-control" placeholder="Descrição do veículo">
        @Html.ValidationMessageFor(x => x.Descrição)
    </div>
    <div class="form-group">
        <label for="Motor">Motor</label>
        <input asp-for="Motor" type="text" class="form-control" placeholder="Motor">
        @Html.ValidationMessageFor(x => x.Motor)
    </div>
    <div class="form-group">
        <label for="Preço">Preço</label>
        <input asp-for="Preço" type="number" class="form-control" placeholder="Preço">
        @Html.ValidationMessageFor(x => x.Preço)
        <br />

    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a  role="button" class="btn btn-danger" asp-controller="Veiculo" asp-action="Index">Voltar</a>
</form>
