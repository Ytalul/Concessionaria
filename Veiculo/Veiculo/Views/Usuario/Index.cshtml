@{
    ViewData["Title"] = "Principal";
}
@model List<UsuarioModel>
<div>
    <a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Adicionar">Adicionar novo usuário</a>
</div>
<div class="text-center">
    <h1 class="display-4">Listagem de usuários</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">DataCadastro</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Perfil</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.DataCriação</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary" asp-route-id="@usuario.Id" role="button" asp-controller="Usuario" asp-action="Editar">Editar</a>
                                <a class="btn btn-danger" asp-route-id="@usuario.Id" role="button" asp-controller="Usuario" asp-action="Apagar">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd>"><td valign="top">Nenhum usuário encontrado</td></tr>
            }
            
            
        </tbody>
    </table>
</div>