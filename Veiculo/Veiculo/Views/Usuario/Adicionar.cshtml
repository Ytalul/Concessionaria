@using Veiculo.Enums
@{
    ViewData["Title"] = "Adicionar Usuário";
}
@model UsuarioModel

<div class="text-center">
    <h1 class="display-4">Adicionar novo usuário</h1>
</div>
<form asp-controller="Usuario" asp-action="Adicionar" method="post">
    
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Nome do usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" type="text" class="form-control" placeholder="Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="Descrição">Login</label>
        <input asp-for="Login" type="text" class="form-control" placeholder="Login do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="Perfil">Tipo de perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="@PerfilEnum.Admin" > Administrador</option>
            <option value="@PerfilEnum.Padrao" > Padrão</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Senha">Senha</label>
        <input asp-for="Senha" type="password" class="form-control" placeholder="Senha do usuário">
        @Html.ValidationMessageFor(x => x.Senha)
        <br />
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a role="button" class="btn btn-danger" asp-controller="Usuario" asp-action="Index">Voltar</a>
</form>
