@using Veiculo.Enums
@{
    ViewData["Title"] = "Atualizar moto";
}
@model UsuarioModel

<div class="text-center">
    <h2 class="display-4">Atualizar informações do usuário</h2>
</div>
<form asp-controller="Usuario" asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Nome do veículo">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Ano">Email</label>
        <input asp-for="Email" type="Email" class="form-control" placeholder="Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="Descrição">Login</label>
        <input asp-for="Login" type="text" class="form-control" placeholder="Login do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="Perfil">Tipo de perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="@PerfilEnum.Admin" > Administrador</option>
            <option value="@PerfilEnum.Padrao" > Padrão</option>
        </select>
    </div>
        <div class="form-group">
        <label for="Motor">Senha</label>
        <input asp-for="Senha" type="text" class="form-control" placeholder="Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a role="button" class="btn btn-danger" asp-controller="Usuario" asp-action="Index">Voltar</a>
</form>
